
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <div class="d-flex align-items-end">
                <h4>BEM-VINDO AO MAPA</h4>
                &nbsp;&nbsp;&nbsp;<h6>ministério da agricultura</h6>
            </div>
            <div class="d-flex align-items-center">
                @User.Identity.Name
                <a class="nav-link" asp-area="" asp-controller="Home"
                   asp-action="Logout">Logout</a>
            </div>
        </header>
    }
    <div class="container-fluid container_cl">
        @if (User.Identity.IsAuthenticated)
        {
            @await Component.InvokeAsync("NavSide")
        }
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="final">
            App Construído para a aps da unip - 5 semestre
            &copy; 2021 - App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
