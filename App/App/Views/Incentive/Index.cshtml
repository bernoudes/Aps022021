@model IEnumerable<App.Models.Incentive>

@{
    ViewData["Title"] = "Incentivos";
}
<div class="content_side">
    <h1>Incentivos   <a asp-action="Create"><button class="btn btn-success">Cadastrar novo</button></a></h1>
    @if (TempData["message"] != null)
    {
        <h3>Erro na Ação Anterior</h3>
        <p>@TempData["message"]</p>
    }

    @foreach (var item in Model)
    {
        <div class="InternalInfoBox">
            <p style="word-break: break-all; white-space:normal;">
                <strong>Nome do Incentivo:&nbsp;</strong>@Html.DisplayFor(modelItem => item.Name)<br />
                <strong>Tipo:&nbsp;</strong>@Html.DisplayFor(modelItem => item.TypeOfIncentive)<br />
                <strong>Descrição:&nbsp;</strong>@Html.DisplayFor(modelItem => item.Description)<br />
            </p>
            <div>
                <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-primary">Editar</button></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger">Deletar</button></a>
            </div>
        </div>
        <br />
    }
</div>